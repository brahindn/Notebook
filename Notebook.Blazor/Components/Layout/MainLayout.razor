@inherits LayoutComponentBase

<MudLayout>
    <MudThemeProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />
    <MudPopoverProvider />
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
            Denys Web Api Application
            <MudSpacer/>
        <MudIcon Icon="@Icons.Custom.Brands.Google" Color="Color.Inherit"/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/contacts" Match="NavLinkMatch.Prefix">Contact options</MudNavLink>
            <MudNavLink Href="/addresses" Match="NavLinkMatch.Prefix">Address options</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code 
{
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}